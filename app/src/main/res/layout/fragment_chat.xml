<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="br.com.andrecouto.paypay.fragment.dashboard.ChatDashBoardFragment">


    <ScrollView
        android:id="@+id/scrollview_attendance_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin_72_dp"
        android:background="@color/colorPrimaryLight"
        android:scrollbars="none">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/default_margin_16_dp"
            android:layout_marginRight="@dimen/default_margin_16_dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_45A9BB"
                android:padding="@dimen/default_text_14_sp">

                <TextView
                    android:id="@+id/text_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Chat"
                    android:textColor="@color/white"
                    android:textSize="@dimen/default_text_16_sp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

    <br.com.andrecouto.paypay.view.custom.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>
