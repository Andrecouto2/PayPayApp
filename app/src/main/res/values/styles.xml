<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppNoTitle" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_e5e5e5</item>
    </style>

    <style name="text_default_regular" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/roboto_medium.ttf</item>
    </style>

    <style name="text_default_bold" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/roboto_bold.ttf</item>
    </style>

    <style name="text_font_roboto" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="text_font_roboto_bold" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="text_font_roboto_light" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Light.ttf</item>
    </style>

    <style name="text_font_roboto_medium" parent="TextAppearance.AppCompat">
        <item name="typeface">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="themed_button_borderless_font_roboto" parent="text_font_roboto">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_16_sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/ripple_color</item>
    </style>


</resources>
